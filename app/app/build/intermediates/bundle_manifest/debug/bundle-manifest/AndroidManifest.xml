<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ordy.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />
    <!-- Permission to connect to the internet for fetching data from the backend API. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >

        <!-- Login Activity -->
        <activity
            android:name="com.ordy.app.ui.login.LoginActivity"
            android:label="@string/title_login"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Main Activity -->
        <activity
            android:name="com.ordy.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Create order activity -->
        <activity
            android:name="com.ordy.app.ui.orders.create.CreateOrderActivity"
            android:label="@string/title_create_order"
            android:parentActivityName="com.ordy.app.MainActivity" />

        <!-- Create group activity -->
        <activity
            android:name="com.ordy.app.ui.groups.create.CreateGroupActivity"
            android:label="@string/title_create_group"
            android:parentActivityName="com.ordy.app.MainActivity" />

        <!-- Overview group activity -->
        <activity
            android:name="com.ordy.app.ui.groups.overview.OverviewGroupActivity"
            android:parentActivityName="com.ordy.app.MainActivity" />

        <!-- Profile activity -->
        <activity
            android:name="com.ordy.app.ui.profile.ProfileActivity"
            android:label="@string/title_profile"
            android:parentActivityName="com.ordy.app.MainActivity" />

        <!-- Settings activity -->
        <activity
            android:name="com.ordy.app.ui.settings.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName="com.ordy.app.MainActivity" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.ordy.app.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>