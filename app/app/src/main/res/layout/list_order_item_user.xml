<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Loading -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/order_item_user_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/placeholder_single"/>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Data -->
    <LinearLayout
        android:id="@+id/order_item_user_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/placeholder_group_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/order_item_user_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</RelativeLayout>