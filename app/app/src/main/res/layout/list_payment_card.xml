<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Loading -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/payment_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/placeholder_default" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <!-- Data -->
        <LinearLayout
            android:id="@+id/payment_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Information -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:divider="@drawable/divider_4dp"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <!--
                            These text values are placeholders, It is oke they are not a string recourse
                        -->
                    <TextView
                        android:id="@+id/order_location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location Name"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/order_deadline_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DD-MM-YY-HH" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_group_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group name"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/payment_other_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other User"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Courier & Closing -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_4dp"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <Button
                        android:id="@+id/payment_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mark_as_paid" />

                    <Button
                        android:id="@+id/payment_notify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/darker_gray"
                        android:text="@string/notify" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/payment_order_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>